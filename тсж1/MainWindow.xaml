<Window x:Class="TSJApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление жалобами" Height="400" Width="600">

    <Grid>
        <ComboBox x:Name="CategoryComboBox"
                  ItemsSource="{Binding Categories}"
                  DisplayMemberPath="Name"
                  SelectedItem="{Binding SelectedCategory}" 
                  VerticalAlignment="Top" Margin="10"/>
       
        <ListBox x:Name="ProblemsListBox"
                 ItemsSource="{Binding SelectedCategory.Problems}"
                 SelectedItem="{Binding SelectedProblem}"
                 VerticalAlignment="Top" Margin="10,40,10,10"/>

        <StackPanel VerticalAlignment="Top" Margin="300,40,10,10">
            <TextBlock Text="Заголовок:"/>
            <TextBox Text="{Binding SelectedProblem.Title}"/>

            <TextBlock Text="Описание:"/>
            <TextBox Text="{Binding SelectedProblem.Description}"/>

            <TextBlock Text="Решение:"/>
            <TextBox Text="{Binding SelectedProblem.ResolutionPlan}"/>

            <TextBlock Text="Статус:"/>
            <TextBox Text="{Binding SelectedProblem.Status}"/>
            <StackPanel HorizontalAlignment="Right">
                <Image Source="/wsi-imageoptim-obyazannosti-p.jpg">

                </Image>
            </StackPanel>
        </StackPanel>
        

        <Button Content="Создать" 
                VerticalAlignment="Bottom" 
                Margin="10"
                
                Click="CreateProblem_Click"/>
        
        
    </Grid>
    
</Window>
